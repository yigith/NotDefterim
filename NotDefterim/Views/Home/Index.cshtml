@model List<Note>
@{
    ViewData["Title"] = "Not Defterim";
}

<a asp-controller="Notlar" asp-action="Yeni" class="btn btn-primary">Yeni Not</a>

@if (Model.Count == 0)
{
    <p>Üzgünüm, gösterilecek bir notun yok.</p>
}
else
{
    <ul>
        @foreach (Note note in Model)
        {
            <li>
                <strong>@note.Title</strong><br />
                @note.Content
            </li>
        }
    </ul>
}

