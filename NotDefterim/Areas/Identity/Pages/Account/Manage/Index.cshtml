@page
@inject UserManager<ApplicationUser> UserManager
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value;
    var user = UserManager.Users.First(x => x.Id == userId);
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6 text-center">
        @if (string.IsNullOrEmpty(user.Photo))
        {
            <img src="~/img/no-avatar.png" class="border rounded p-1" width="200" height="200" alt="no profile photo" />
        }
        else
        {
            <img src="~/uploads/@user.Photo" class="border rounded p-1" width="200" height="200" alt="profile photo" />
        }
        <br />
        <span>(<a asp-area="" asp-controller="ProfilResmi" asp-action="Index">Resmi Güncelle</a>)</span>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}